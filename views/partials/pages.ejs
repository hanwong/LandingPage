<main data-ng-app="ngUI">
    
  <section class="home" id="home" data-ng-controller="homeCtrl as home">
     <ul class="home-carousel">
       <li class="{{item.class}} home-animation" 
          data-ng-class="{'active': home.isSelected( '{{item.class}}' )}" 
          data-ng-repeat="item in home.contents">
          <!-- data-ng-if="home.isSelected( '{{item.class}}' )" -->
         <div class="text-items">
           <div class="item-name">{{item.name}}</div>
           <div class="item-description">{{item.description}}</div>
         </div>
         <div class="item-img"><img data-ng-src="{{item.img}}" alt="{{item.name}}"></div>
       </li>
     </ul>
     <button type="button" class="prev" data-ng-click="home.prevItem()">&lt;</button>
     <button type="button" class="next" data-ng-click="home.nextItem()">&gt;</button>
  </section>

  <section class="page01" id="page01" data-ng-controller="peopleCtrl as people">
     <ul class="people-carousel">
       <li class="{{item.class}} people-animation"
          data-ng-class="people.currentClass( '{{item.class}}' )"
          data-ng-repeat="item in people.contents">
         <div class="item-img"><img data-ng-src="{{item.img}}" alt="{{item.name}}"></div>
         <div class="item-text">
           <div class="item-description">{{item.description}}</div>
           <div class="item-name">{{item.name}}</div>
           <div class="item-role">{{item.role}}</div>
         </div>
       </li>
     </ul>
     <button type="button" class="prev" data-ng-click="people.prevItem()">&lt;</button>
     <button type="button" class="next" data-ng-click="people.nextItem()">&gt;</button>
  </section>

  <section class="page02" id="page02" data-ng-controller="listCtrl as list">
    <div class="filter-btns">
      <button type="button" data-ng-click="list.sortItems('all')">all</button>
      <button type="button" data-ng-click="list.sortItems('app')">app</button>
      <button type="button" data-ng-click="list.sortItems('branding')">branding</button>
      <button type="button" data-ng-click="list.sortItems('web')">web</button>
    </div>
    <ul class="filter-list">
      <li class="{{item.category}} list-animation" 
        data-ng-class="{ 'selected': list.currentCategory( '{{item.category}}' )}" 
        data-ng-repeat="item in list.contents">
        <div class="card">
          <div class="front">{{item.name}}</div>
          <div class="back">{{item.description}}</div>
        </div>
      </li>
    </ul>
  </section>

  <section class="page03" id="page03" data-ng-controller="testCtrl">
    <div ng-class="color" class="colorful">
      this box is moody
    </div>
    <button ng-click="color='red'">Change to red</button>
    <button ng-click="color='blue'">Change to blue</button>
    <button ng-click="color='green'">Change to green</button>
  </section>
  <section class="page04" id="page04" >page04</section>
  <section class="page05" id="page05" >page05</section>
</main>